<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap Todo Form</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <style>
    body {
        background-color: #f8f9fa; /* Light background */
        padding: 50px;
    }

    @keyframes fade {
        0%, 100% { opacity: 1; }
        50% { opacity: 0; }
    }

    .fade {
        animation: fade 5s infinite; /* Adjust duration for fade-out and fade-in */
    }

    .heading-container {
        text-align: center;
        margin-bottom: 30px; /* Space below the heading */
    }

    h1 {
        color: blueviolet;
        font-size: 2.5rem; /* Adjust font size */
        transition: color 0.5s ease; /* Smooth color transition */
    }

    h1:hover {
        color: darkviolet; /* Change color on hover */
    }
   
</style>

  <body>
    <form action="/addTodo" method="post" class="container mt-5 border 5px">
      <div class="mb-3">
        <h1 class="fade" style="text-align: center;">Todo List</h1>
        <label for="todo" class="form-label">Add Todo</label>
        <input type="text" class="form-control" id="todo" name="todo" required placeholder="Enter your todo">
      </div>
      <div class="mb-3">
        <label for="date" class="form-label">Date</label>
        <input type="date" class="form-control" id="date" name="date" required>
      </div>
      <button class="btn btn-warning" type="submit">Submit</button>
    </form>

    <div class="container ">
<form action="\filter" method="post">
    <label for="date" class="form-label">Filter</label>
    <input type="date" class="form-control" id="date" name="date" required>
    <button type="submit" class="btn btn-success">Filter</button>
</form>

    </div>
    <div class="display-todos container">
        <div class="row row-cols-1 row-cols-md-2 g-4">
            <% if(data.length>0){%>
                <% for(let i=0;i<data.length;i++){%>
            <div class="col">
              <div class="card">
                
                <div class="card-body">
                  <h5 class="card-title" style="text-align: center;"><%= data[i].date %></h5>
                  <p class="card-text" style="text-align: center;"><%= data[i].todo %></p>
                  <p style="text-align: center;">
                    <a href="/delete/<%=data[i].id%>">
                    <button class="btn btn-danger ""><i class="material-icons">delete</i></button>
                </a>
                    <a href="/edit/<%=data[i].id%>">
                    
                   
                    <button class="btn btn-primary m-1"><i class="material-icons">border_color</i></button>
                </a>
                  </p>
                </div>
              </div>
            </div>
        <%}%>
        <%}%>
            </div>
          </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>
